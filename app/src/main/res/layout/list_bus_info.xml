<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:layout_editor_absoluteY="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="20dp">

        <TextView
            android:id="@+id/bus_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/bus_date"
            android:layout_alignStart="@+id/bus_date"
            android:layout_below="@+id/bus_date"
            android:layout_marginTop="15dp"
            android:text="origin"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/bus_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="date"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/bus_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/bus_origin"
            android:layout_alignStart="@+id/bus_origin"
            android:layout_below="@+id/bus_origin"
            android:layout_marginTop="16dp"
            android:text="time"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/bus_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView21"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/textView21"
            android:layout_toRightOf="@+id/textView21"
            android:text="destination"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bus_origin"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/bus_origin"
            android:layout_toRightOf="@+id/bus_origin"
            android:text="to"
            android:textColor="#000000" />
    </RelativeLayout>

</RelativeLayout>